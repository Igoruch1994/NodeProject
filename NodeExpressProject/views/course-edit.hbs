<h1>Edit course</h1>

<form action="/courses/edit" method="post" class="course-form">

    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Please type course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Please type price"></span>
    </div>

    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" required value="{{course.image}}">
        <label for="image">Course Image URL</label>
        <span class="helper-text" data-error="Please typr URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn btn-primary">Edit course</button>

</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn red">Remove course</button>
</form>